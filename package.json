{
  "scripts": {
    "test:jest": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "pretest": "npm run lint",
    "test": "npm run test:jest",
    "posttest": "npm run format",
    "format": "prettier --write \"**/*.{js,css,md}\"",
    "lint": "eslint . --cache --fix"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "husky": "^2.2.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
